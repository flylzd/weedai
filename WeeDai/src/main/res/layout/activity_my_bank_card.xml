<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/layoutMyBank">
        <TextView
            style="@style/textMyBankTitle"
            android:text="@string/user_my_bank_real_name" />

        <TextView
            android:id="@+id/tvRealName"
            style="@style/textMyBank" />
    </LinearLayout>

    <include layout="@layout/view_horizontal_line" />

    <LinearLayout style="@style/layoutMyBank">

        <TextView
            style="@style/textMyBankTitle"
            android:text="@string/user_my_bank_account" />

        <TextView
            android:id="@+id/tvRealEmail"
            style="@style/textMyBank" />
    </LinearLayout>

    <include layout="@layout/view_horizontal_line" />

    <LinearLayout style="@style/layoutMyBank">

        <TextView
            style="@style/textMyBankTitle"
            android:text="@string/user_my_bank_bank" />

        <RelativeLayout style="@style/textMyBank">

            <ImageView
                android:id="@+id/imgBankIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@+id/imgBankIcon"
                android:text="中国银行"
                android:textColor="@color/main_text"
                android:textSize="22sp" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBankName"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/imgBankIcon"
                android:text="尾号6215储蓄卡"
                android:textColor="@color/main_text"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/view_horizontal_line" />

    <LinearLayout style="@style/layoutMyBank">

        <TextView
            style="@style/textMyBankTitle"
            android:text="@string/user_my_bank_branch_name" />

        <TextView
            android:id="@+id/tvBankBranch"
            style="@style/textMyBank" />
    </LinearLayout>

    <include layout="@layout/view_horizontal_line" />

    <LinearLayout style="@style/layoutMyBank">

        <TextView
            style="@style/textMyBankTitle"
            android:text="@string/user_my_bank_bank_card_code" />

        <TextView
            android:id="@+id/tvBankCode"
            style="@style/textMyBank" />
    </LinearLayout>

    <Button
        android:id="@+id/btnModifyBankCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_btn_bg"
        android:text="@string/user_my_bank_modify_bank_card"
        android:textColor="@color/white" />


</LinearLayout>