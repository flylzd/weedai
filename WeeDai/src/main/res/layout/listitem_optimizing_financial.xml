<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvAnnualRate"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/tvAnnualRate"
                android:background="@drawable/ic_break_even"
                android:gravity="center"
                android:padding="3dp"
                android:text="保"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvAnnualRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/financial_annual_rate"
                android:textColor="#272727" />

            <TextView
                android:id="@+id/tvDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvAnnualRate"
                android:paddingTop="4dp"
                android:text="@string/financial_deadline"
                android:textColor="#9c9c9c" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvDeadline"
                android:paddingTop="4dp"
                android:text="@string/financial_amount"
                android:textColor="#9c9c9c" />

            <TextView
                android:id="@+id/tvReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvAmount"
                android:paddingTop="4dp"
                android:text="@string/financial_reward"
                android:textColor="#272727" />

            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvReward"
                android:paddingTop="4dp"
                android:text="1月07日10:00开始竞标"
                android:textColor="#9c9c9c" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.weedai.ptp.view.NumberCircleProgressBar
                android:id="@+id/numberCircleProgress22"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                custom:max="100"
                custom:progress="0"
                custom:progress_circle_radius="30dp"
                custom:progress_reached_color="#3498DB"
                custom:progress_text_color="@android:color/black"
                custom:progress_text_size="15sp"
                custom:progress_text_visibility="visible"
                custom:progress_unreached_color="#CCCCCC" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/tvTitle"
                android:layout_marginTop="4dp"
                android:background="#e0e0e0"></View>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dp"
                android:text="优选理财计划1个月"
                android:textColor="#272727"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnState"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="立即加入" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>