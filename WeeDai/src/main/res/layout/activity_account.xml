<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutAccount"
            style="@style/layoutAccount"
            android:clickable="true">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tvRealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAvatar"
                android:layout_marginTop="8dp"
                android:text="真实姓名:" />

            <TextView
                android:id="@+id/tvSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAvatar"
                android:layout_marginStart="60dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tvRealName"
                android:text="性别: 女" />


        </RelativeLayout>


        <include layout="@layout/view_horizontal_line" />

        <RelativeLayout
            android:id="@+id/layoutAccountDateBirth"
            style="@style/layoutAccount"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/account_date_birth" />

            <TextView
                android:id="@+id/tvAccountPasswordDateBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text="@string/account_not_set"
                android:textColor="@color/main_text" />
        </RelativeLayout>

        <include layout="@layout/view_horizontal_line" />

        <RelativeLayout
            android:id="@+id/layoutAccountPhone"
            style="@style/layoutAccount"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/account_phone" />

            <TextView
                android:id="@+id/tvAccountPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text="@string/account_not_set"
                android:textColor="@color/main_text" />
        </RelativeLayout>

        <include layout="@layout/view_horizontal_line" />

        <RelativeLayout
            android:id="@+id/layoutAccountEmail"
            style="@style/layoutAccount"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/account_email" />

            <TextView
                android:id="@+id/tvAccountEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text="@string/account_not_set"
                android:textColor="@color/main_text" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layoutAccountModifyLoginPassword"
            style="@style/layoutAccount"
            android:layout_marginTop="20dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/account_modify_login_password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:textColor="@color/main_text" />

        </RelativeLayout>

        <include layout="@layout/view_horizontal_line" />

        <RelativeLayout
            android:id="@+id/layoutAccountPasswordProtection"
            style="@style/layoutAccount"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/account_password_protection" />

            <TextView
                android:id="@+id/tvAccountPasswordProtection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text="@string/account_not_set"
                android:textColor="@color/main_text" />

        </RelativeLayout>

        <include layout="@layout/view_horizontal_line" />

        <RelativeLayout
            android:id="@+id/layoutAccountPasswordManagementGestures"
            style="@style/layoutAccount"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/account_password_management_gestures" />

            <TextView
                android:id="@+id/tvAccountPasswordManagementGestures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_right"
                android:text="@string/account_not_set"
                android:textColor="@color/main_text" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_btn_bg"
            android:text="安全退出"
            android:textColor="@color/white" />


    </LinearLayout>

</ScrollView>