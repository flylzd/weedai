<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_hero">

            <TextView
                android:id="@+id/tvHeroTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="本周投资英雄榜"
                android:textColor="@color/main_text_orange"
                android:textSize="16sp" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeroTitle"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvHeroLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imgHeroLeft"
                    android:gravity="center"
                    android:text="380元"
                    android:textColor="@color/main_text_orange" />

                <ImageView
                    android:id="@+id/imgHeroLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_hero_left" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvHeroMiddle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imgHeroMiddle"
                    android:gravity="center"
                    android:text="380元"
                    android:textColor="@color/main_text_orange" />

                <ImageView
                    android:id="@+id/imgHeroMiddle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_hero_middle" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvHeroRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/imgHeroRight"
                    android:gravity="center"
                    android:text="380元"
                    android:textColor="@color/main_text_orange" />

                <ImageView
                    android:id="@+id/imgHeroRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_hero_left" />

            </RelativeLayout>


        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="活动详情"
            android:textColor="@color/main_text_orange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(1)  活动时间："
            android:textColor="@color/main_text_orange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="2dp"
            android:text="@string/hero_one"
            android:textColor="@color/main_text_orange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="(2)  活动规则："
            android:textColor="@color/main_text_orange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="2dp"
            android:text="@string/hero_two"
            android:textColor="@color/main_text_orange" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="@string/hero_hint"
            android:textColor="@color/main_text_orange" />

    </LinearLayout>

</LinearLayout>