<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/main_content_padding_top">


    <LinearLayout style="@style/layoutMyBank">

        <TextView
            style="@style/textMyBankTitle"
            android:text="@string/user_my_bank_bank" />

        <RelativeLayout style="@style/textMyBank">

            <ImageView
                android:id="@+id/imgBankIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@+id/imgBankIcon"
                android:text="中国银行"
                android:textColor="@color/main_text"
                android:textSize="22sp" />

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/view_horizontal_line" />

    <LinearLayout style="@style/layoutMyBank">

        <TextView
            style="@style/textMyBankTitle"
            android:text="@string/user_my_bank_branch_name" />

        <TextView
            style="@style/textMyBank"
            android:text="微E贷" />
    </LinearLayout>

    <include layout="@layout/view_horizontal_line" />

    <LinearLayout style="@style/layoutMyBank">

        <TextView
            style="@style/textMyBankTitle"
            android:text="@string/user_my_bank_bank_card_code" />

        <TextView
            style="@style/textMyBank"
            android:text="微E贷" />
    </LinearLayout>


    <LinearLayout style="@style/layoutMyBank">

        <TextView
            style="@style/textMyBankTitle"
            android:text="@string/user_my_bank_recharge_input_validation" />

        <EditText
            style="@style/textMyBank"
            android:text="微E贷" />

    </LinearLayout>

    <Button
        android:id="@+id/btnModifyBankCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_btn_bg"
        android:text="确认提交"
        android:textColor="@color/white" />


</LinearLayout>